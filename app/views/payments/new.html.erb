<h1>支付</h1>
<div class="row">
  <div class="container">
    <div class="page-header">
      <h4><i class="fa fa-credit-card"></i> 支付宝付款</h4>
    </div>
    <p>订单号: <%= @main_order.orders.map { |order| "<strong>#{order.order_no}</strong>" }.join(', ').html_safe %></p>
    <ul class="list-group">
      <li class="list-group-item">
        <%= image_tag "alipay.png", width: 100 %>
      </li>
    </ul>

    <br />
    <div class="pull-right">
      <%= form_for @payment, url: payments_path, method: 'post' do |f| %>
        <strong>¥<%= @main_order.main_total_money %></strong>
        <input type="hidden" name="main_order_no" value = <%= @main_order.main_order_no %> />
        <%= f.submit '支付', class: "btn btn-success btn-lg", id: 'pay-to-seller-btn', data: {id: @main_order.id} %>
      <% end %>
    </div>
  </div>
</div>
