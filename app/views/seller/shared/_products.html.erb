<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <% if !product.product_images.blank? %>
          <%= link_to image_tag(product.main_product_image.image.url(:middle), alt: product.title), seller_product_path(product) %>
        <% end %>
        <div class="caption">
          <h4><%= link_to product.title, seller_product_path(product), class: 'title' %></h4>
          <p><strong>¥<%= product.price %></strong> <span class="msrp">¥<%= product.msrp %></span></p>
        </div>
      </div>
    </div>
  <% end -%>
</div>

<%= will_paginate @products %>
